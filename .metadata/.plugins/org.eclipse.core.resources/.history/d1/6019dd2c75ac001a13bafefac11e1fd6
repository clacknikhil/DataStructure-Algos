package Trees;

class Node{
	
	int data;
	Node right;
	Node left;
	

	public Node(int data) {
		
		this.data = data;
		left = right = null;
	}
}

public class MirrorTree {
	
	Node a, b;
	
	boolean areMirrors(Node a, Node b) {
		
		if(a== null && b== null)
			return true;
		
		if(a==null || b==null)
			return false;
		
		return a.data == b.data 
				&& areMirrors(a.left, b.right) 
				&& areMirrors(a.right, b.left);
		
	}
	

	public static void main(String[] args) {
		MirrorTree mt = new MirrorTree();
		Node a = new Node(1);
		

	}

}
